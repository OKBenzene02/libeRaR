<h2>Search Authors</h2>
<form action="/books" method="GET">
    <div>
        <label>Title</label>
        <input type="text" name="title" value="<%= searchAuthor.title %>">
    </div>
    
    <div>
        <label>Published After</label>
        <input type="date" name="publishedAfter" 
        value="<%= searchAuthor.publishedAfter %>">
    </div>
    
    <div>
        <label>Published Before</label>
        <input type="date" name="publishedAfter" 
        value="<%= searchAuthor.publishedBefore %>">
    </div>

    <button type="submit">Search</button>
</form>

<br>

<div>
    <% books.forEach((author) => { %>
        <img height="150" width="100" src="<%= author.coverImagePath %>">
    <% }) %>
</div>